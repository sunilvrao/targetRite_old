<div class="mid-container wrapper">
  <h1 class="title">Sign In</h1>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <ul class="fields">
      <li>
        <i class="icon-user"></i>
        <%= f.text_field :email, :placeholder => "username", :id => "username",:label => false, :autocomplete =>"off", :required => false, :autofocus => true%>
     </li>
      <li>
        <i class="icon-key"></i>
		<%= f.text_field :password, :placeholder => "password", :label => false, :autocomplete => "off", :required => false%>
      </li>
    </ul>

    <div class="mid-form">
      <span class="login-checkbox pull-left">
	        <%= check_box_tag :remember_me %>
	        <%= label_tag :remember_me %>
	      </span>
      <%= f.button :submit, "Sign In", class: "btn blue large pull-right" %>
    </div>

    <div class="inset-margin">

      <%= link_to "#", class: "btn btn-twitter btn-block" do %>
          <i class="icon-twitter-sign"></i> Login with Twitter
      <% end %>
      <%= link_to "#", class: "btn btn-facebook btn-block" do %>
          <i class="icon-facebook-sign"></i> Login with Facebook
      <% end %>
    </div>

  <% end %>

  <div class="mid-footer">
    Don't have an account yet? <%= link_to 'Register here', new_user_registration_path %>
  </div>
</div>